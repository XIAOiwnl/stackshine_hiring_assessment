<div class="row main">
  <div class="col-1"></div>
  <div class="col-1 backButton">
    <h3><%= link_to "←Back", root_path, class: "backButton" %></h3>
  </div>
  <div class="col-1"></div>

  <div class="col-6">
    <div class="row">
      <div class="col">
        <h1>Members</h1>
      </div>
    </div>

    <div class="row">
      <div class="col membersTable">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Title</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <% @workspaceMembers.each do |workspaceMember| %>
              <tr>
                <td><%= link_to workspaceMember.name, workspace_member_path(workspaceMember.id) %></td>
                <td><%= workspaceMember.title %></td>
                <td><%= workspaceMember.email %></td>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
    
  <div class="col-3"></div>
</div>


